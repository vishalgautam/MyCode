#include<iostream>
#include<list>
using namespace std;
class graph{
    int v;
    list<int> *node;
    typedef enum {white=0,grey,black} Color;
    typedef list<int>::iterator list;
    Color *color;
    public:
    graph(int n):v(n){
        color=new Color[v+1];
        node=new list<int>[v+1];
        for(int i=0;i<v;i++)
            color[i]=white;
    }
    void add(int s,int d){
        node[s].push_back(d);
    }
    void dfs(int s);
}
void  graph::dfs(int source){
    int current;
    color[source]=grey;
    list itr=node[source].begin();
    list end=node[source].end();
    while(itr!=end){
        current=*itr;
        if(color[current]==white)
            dfs(current);
        else if(color[current]==grey)
            cout<<"Cyclic Graph";
    }
    color[current]=black;
}
int main(){
    graph gr(6);
    gr.add(1,2);
    gr.add(2,6);
    gr.add(6,1);
    gr.add(1,3);
    gr.add(3,4);
    gr.add(3,5);
    gr.add(4,6);
    return 0;
}
