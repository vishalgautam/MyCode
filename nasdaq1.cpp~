#include<iostream>
#include<list>
#include<vector>
#include<algorithm>
using namespace std;
typedef unsigned long int UL;
int main(){
    std::vector<UL>  truck;
    std::list<UL> box;
    std::list<UL>::iterator beg,end,temp;
    int n,m,i,j,count=0;
    UL weight,capacity;
    cin>>n>>m;
    cout<<"ererer\n";
    for(i=1;i<=n;i++){
        cin>>weight;
        box.push_back(weight);
    }
    
    for(i=0;i<m;i++){
        cin>>capacity;
        truck[i]=capacity;
    }
cout<<"wewew\n";
    box.sort();
    sort(truck.begin(),truck.end());

    while(n>0){
        beg=box.begin();
        end=box.end();
        i=0;
        while(n>0 && i<m && beg!=end){
            if(truck[i]>*beg){
                temp=beg++;
                box.erase(temp);
                n--;
                i++;
            }
            else {
                beg++;
            }
        }
        if(n>0) count+=2;
        else count++;
    }
    cout<<count;
    return 0;
}
